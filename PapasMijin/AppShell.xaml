<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:PapasMijin.Views"
       x:Class="PapasMijin.AppShell">
    <FlyoutItem Title="Inicio">
        <ShellContent ContentTemplate="{DataTemplate views:PapasView}"/>
    </FlyoutItem>
    <FlyoutItem Title="Ventas">
        <ShellContent ContentTemplate="{DataTemplate views:VentasView}"/>
    </FlyoutItem>
    <FlyoutItem Title="Compras">
        <ShellContent ContentTemplate="{DataTemplate views:ComprasView}"/>
    </FlyoutItem>
    <FlyoutItem Title="Precios">
        <ShellContent ContentTemplate="{DataTemplate views:PreciosView}"/>
    </FlyoutItem>
</Shell>